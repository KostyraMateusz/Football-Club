@model FootballClubLibrary.Models.Zarzad

@{
    ViewData["Title"] = "Edit";
    CultureInfo.DefaultThreadCurrentCulture = new CultureInfo("en-US");
    CultureInfo.DefaultThreadCurrentUICulture = new CultureInfo("en-US");
}

<h1>Edytuj zarząd</h1>
<div>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdZarzad" />
        <div class="form-group">
            <label asp-for="IdKlubu" class="control-label"></label>
            <select asp-for="IdKlubu" class="form-control" asp-items="ViewBag.IdKlubu"></select>
            <span asp-validation-for="Klub" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="Budzet" class="control-label"></label>
            <input asp-for="Budzet" class="form-control" />
            <span asp-validation-for="Budzet" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="Cele" class="control-label"></label>
            <input asp-for="Cele" class="form-control" />
            <span asp-validation-for="Cele" class="text-danger"></span>
        </div>

        <br/><hr />

        <div class="form-group">
            <input type="submit" value="Edytuj zarząd" class="btn btn-primary" /> |
            <a asp-action="Index">Wróć do listy zarządów</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}