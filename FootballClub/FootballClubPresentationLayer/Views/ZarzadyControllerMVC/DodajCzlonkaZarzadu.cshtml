@model FootballClubLibrary.Models.Zarzad

@{
    ViewData["Title"] = "Dodaj członka do zarządu";
}

<h1>Dodaj członka do zarządu</h1>

<div>
    <hr />
    <form asp-action="DodajCzlonkaZarzadu">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdZarzad" />
        <div class="form-group">
            <label asp-for="Klub.Nazwa" class="control-label"></label>
            <input asp-for="Klub.Nazwa" class="form-control" readonly />
            <span asp-validation-for="Klub.Nazwa" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label asp-for="Pracownicy" class="control-label"></label>
            <select asp-for="Pracownicy" name="wybranypracownik" class="form-control">
                @foreach (var pracownik in ViewBag.Pracownicy)
                {
                    <option value="@pracownik.IdPracownik"> @pracownik.Imie @pracownik.Nazwisko</option>
                }
            </select>
            <span asp-validation-for="Pracownicy" class="text-danger"></span>
        </div>

        <br /><hr />

        <div class="form-group">
            <input type="submit" value="Dodaj członka" class="btn btn-primary" /> |
            <a asp-action="Index">Wróć do listy zarządów</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}