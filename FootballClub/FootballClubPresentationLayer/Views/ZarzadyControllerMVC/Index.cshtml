@model IEnumerable<FootballClubLibrary.Models.Zarzad>

@{
    ViewData["Title"] = "Index";
}

<h1>Zarządy</h1>

@if (Model.Count() > 0)
{
    <table id="table" class="table table-striped table-dark table-bordered table-hover table-sm">
        <thead>
            <tr class="name-of-headers">
                <th>
                    @Html.DisplayNameFor(model => model.Klub)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Budzet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cele)
                </th>
                <th>
                    <p>Akcje</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Klub.Nazwa)
                    </td>
                    <td>
                        @item.Budzet.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cele)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdZarzad">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdZarzad">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdZarzad">Delete</a> |
                        <a asp-action="ZmienBudzetZarzadu" asp-route-id="@item.IdZarzad">Zmień budżet</a> |
                        <a asp-action="DodajCelZarzadu" asp-route-id="@item.IdZarzad">Zmień cele</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Create">Dodaj nowy</a>
    </p>
}
else
{
    <p>Brak zarządów!</p>
}
