@model FootballClubLibrary.Models.Zarzad

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń zarząd</h1>
<div>
    <hr />

    <a id="nazwa">IdZarządu:</a> @Model.IdZarzad
    
    <br />

    <a id="nazwa">Nazwa klubu:</a> @Model.Klub.Nazwa
    
    <br />

    <div>
        <a id="nazwa">Pracownicy:</a>
        @if (@Model.Pracownicy != null)
        {
            <ul>
                @foreach (var pracownik in @Model.Pracownicy)
                {
                    <li>@pracownik.Imie @pracownik.Nazwisko</li>
                }
            </ul>
        }
        else
        {
            <a>Brak pracowników</a>
        }
    </div>

    <a id="nazwa">Budzet:</a> @Model.Budzet.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)
    
    <br />

    <a id="nazwa">Cele:</a> @Model.Cele
    
    <br /><hr />

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdZarzad" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy zarządów</a>
    </form>
</div>

