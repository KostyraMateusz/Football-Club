@model IEnumerable<FootballClubLibrary.Models.Zarzad>
<h1>Zarządy</h1>

@if (Model.Count() > 0)
{
    <table id="table" class="table table-striped table-dark table-bordered table-hover table-sm">
        <thead>
            <tr class="name-of-headers">
                <th>Pracownicy</th>
                <th>Budzet</th>
                <th>Cele</th>
                <th>Klub</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zarzad in Model)
            {
                <tr>
                    <td>@zarzad.Pracownicy</td>
                    <td>@zarzad.Budzet</td>
                    <td>@zarzad.Cele</td>
                    <td>@zarzad.Klub.Nazwa</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Brak zarządów!</p>
}

