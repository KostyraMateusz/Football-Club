@model FootballClubLibrary.Models.Zarzad

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Zarząd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pracownicy" /> @Html.DisplayNameFor(model => model.Pracownicy)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Budzet" class="control-label"></label>
                <input asp-for="Budzet" class="form-control" />
                <span asp-validation-for="Budzet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cele" class="control-label"></label>
                <input asp-for="Cele" class="form-control" />
                <span asp-validation-for="Cele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdKlubu" class="control-label"></label>
                <select asp-for="IdKlubu" class="form-control" asp-items="ViewBag.IdKlubu"></select>
                <span asp-validation-for="IdKlubu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy zarządów</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
