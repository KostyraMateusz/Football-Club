@model IEnumerable<FootballClubLibrary.Models.Klub>
<h1>Kluby</h1>

@if(Model.Count()>0)
{
<table id="table" class="table table-striped table-dark table-bordered table-hover table-sm">
    <thead>
        <tr class="name-of-headers">
            <th>Nazwa</th>
            <th>Trofea</th>
            <th>Stadion</th>
            <th>IdKlubu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klub in Model)
        {
            <tr>
                <td>@klub.Nazwa</td>
                <td>@klub.Trofea</td>
                <td>@klub.Stadion</td>
                <td>@klub.IdKlub</td>
            </tr>
        }
    </tbody>
</table>
}
else
{
<p>Brak klubów!</p>
}

